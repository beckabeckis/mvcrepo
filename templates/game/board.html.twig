{% extends "base.html.twig" %}

{% block title %}Home
{% endblock %}

{% block body %}
<div class="game">
    <div class="player">
        <h2 class="player_title">Player</h2>
        <img src="{{ asset('img/player.svg') }}" alt="Player" class="player_img">
        <div class="player_cards"></div>
        <p class="player_points">
            Poäng: 
        </p>
    </div>
    <div class="bank">
        <h2 class="bank_title">Bank</h2>
        <img src="{{ asset('img/bank.svg') }}" alt="Bank" class="bank_img">
        <div class="bank_cards"></div>
        <p class="bank_points">
            Poäng: 
        </p>
    </div>
    <div class="buttondiv">
        <a href="{{ path('board_drawn') }}" class="button">Dra kort</a>
    </div>
    <div class="flashdiv">
        {{ include('flash.html.twig') }}
    </div>
</div>

{% endblock %}

